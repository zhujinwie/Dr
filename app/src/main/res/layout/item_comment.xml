<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:id="@+id/avatar_item_comment"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_item_comment_tv"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:text="狮子喵喵妙啊"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/createAt_item_comment"
                android:textColor="@color/text_grey"
                android:textStyle="normal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:text="2天前"
                />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body_item_comment"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:gravity="center_vertical"
            android:text="回复@麻麻说昵称越长就可以把妹纸独晕带回家啪啪啪:你粉丝里有鬼233"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_item_comment"
                android:textColor="@color/text_grey"
                android:drawableLeft="@drawable/iv_comment_grey_16dp"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:id="@+id/like_item_comment"
                android:textColor="@color/text_grey"
                android:textSize="15sp"
                android:drawableLeft="@drawable/iv_like_grey_16dp"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>