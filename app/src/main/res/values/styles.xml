<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MyPopupTheme" parent="@style/ThemeOverlay.AppCompat">

        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_white</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UserNameStyle" parent="WRAP">

        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="TitleNameStyle" parent="WRAP">

        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">3dp</item>

    </style>

    <style name="ShotInfoIconText">

        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>

    </style>
    <style name="WRAP">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DrDialog" parent="android:Theme.Holo.Light.Dialog">

        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    
</resources>
